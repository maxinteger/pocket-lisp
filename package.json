{
  "name": "pocket-lisp",
  "version": "0.1.0",
  "author": {
    "name": "Laszlo Vadasz"
  },
  "license": "MIT",
  "description": "Simple, lisp/closure like interpreter for sandbox scripting in browser",
  "keywords": [
    "interpreter",
    "lisp"
  ],
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "engines": {
    "node": ">= 10.0.0"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/chai": "4.1.7",
    "@types/mocha": "5.2.7",
    "@types/node": "12.0.8",
    "@typescript-eslint/eslint-plugin": "^1.10.2",
    "@typescript-eslint/parser": "^1.10.2",
    "chai": "4.2.0",
    "codecov": "3.5.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^5.0.0",
    "husky": "^2.4.1",
    "mocha": "6.1.4",
    "nyc": "14.1.1",
    "prettier": "1.18.2",
    "rollup": "1.15.5",
    "rollup-plugin-typescript2": "0.21.1",
    "source-map-support": "0.5.12",
    "ts-node": "8.3.0",
    "tsconfig-paths": "3.8.0",
    "typescript": "3.5.2"
  },
  "scripts": {
    "lint": "eslint \"src/**/*.ts\" --fix --max-warnings=0",
    "test": "nyc mocha",
    "report-coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "build": "rollup -c",
    "watch": "rollup -cw",
    "repl": "ts-node -r tsconfig-paths/register src/repl.ts",
    "start": "npm run repl"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none",
    "printWidth": 100
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts",
      "**/*.js",
      "**/*.js.map",
      "test/**/*"
    ],
    "reporter": [
      "html"
    ],
    "all": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && mocha"
    }
  }
}
