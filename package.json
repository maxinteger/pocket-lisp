{
  "name": "pocket-lisp",
  "version": "1.0.0",
  "author": {
    "name": "Laszlo Vadasz"
  },
  "license": "MIT",
  "description": "Simple, lisp/closure like interpreter for sandbox scripting in browser",
  "keywords": [
    "interpreter",
    "lisp"
  ],
  "files": ["dist"],
  "main": "dist/cjs/index.js",
  "module": "dist/es/index.es.js",
  "types": "dist/types/index.d.ts",
  "dependencies": {},
  "devDependencies": {
    "@types/chai": "4.1.7",
    "@types/mocha": "5.2.6",
    "@types/node": "11.13.4",
    "chai": "4.2.0",
    "codecov": "^3.3.0",
    "mocha": "^6.1.4",
    "nyc": "^14.0.0",
    "prettier": "1.17.0",
    "rollup": "^1.10.1",
    "rollup-plugin-typescript2": "^0.21.0",
    "source-map-support": "^0.5.12",
    "ts-node": "^8.1.0",
    "typescript": "3.4.3"
  },
  "scripts": {
    "test": "nyc mocha",
    "report-coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "build": "rollup -c",
    "watch": "rollup -cw"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none",
    "printWidth": 100,
    "overrides": [
      {
        "files": "*.css",
        "options": {
          "semi": true,
          "printWidth": 120
        }
      }
    ]
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts",
      "**/*.js",
      "**/*.js.map",
      "test/**/*"
    ],
    "reporter": [
      "text"
    ],
    "all": true
  }
}
