{
  "name": "pocket-lisp",
  "version": "1.0.0",
  "author": {
    "name": "Laszlo Vadasz"
  },
  "license": "MIT",
  "description": "Simple, lisp/closure like interpreter for sandbox scripting in browser",
  "keywords": [
    "interpreter",
    "lisp"
  ],
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "types": "dist/index.d.ts",
  "dependencies": {},
  "devDependencies": {
    "@types/chai": "4.1.7",
    "@types/mocha": "5.2.7",
    "@types/node": "12.0.4",
    "chai": "4.2.0",
    "codecov": "3.5.0",
    "husky": "^2.4.0",
    "mocha": "6.1.4",
    "nyc": "14.1.1",
    "prettier": "1.17.1",
    "rollup": "1.12.5",
    "rollup-plugin-typescript2": "0.21.1",
    "source-map-support": "0.5.12",
    "ts-node": "8.2.0",
    "tsconfig-paths": "3.8.0",
    "typescript": "3.5.1"
  },
  "scripts": {
    "test": "nyc mocha",
    "report-coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "build": "rollup -c",
    "watch": "rollup -cw",
    "repl": "ts-node -r tsconfig-paths/register src/repl.ts",
    "start": "npm run repl",
    "precommit": "mocha"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none",
    "printWidth": 100,
    "overrides": [
      {
        "files": "*.css",
        "options": {
          "semi": true,
          "printWidth": 120
        }
      }
    ]
  },
  "nyc": {
    "extension": [
      ".ts",
      ".tsx"
    ],
    "exclude": [
      "**/*.d.ts",
      "**/*.js",
      "**/*.js.map",
      "test/**/*"
    ],
    "reporter": [
      "text"
    ],
    "all": true
  }
}
